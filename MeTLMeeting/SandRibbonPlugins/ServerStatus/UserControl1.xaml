<UserControl x:Class="ServerStatus.PluginMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:my="clr-namespace:ServerStatus" 
    Height="100"
    Width="350"
    >

    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static my:PluginMain.StartPolling}" Executed="startPollingExecuted" CanExecute="canStartPolling" />
        <CommandBinding Command="{x:Static my:PluginMain.StopPolling}" Executed="stopPollingExecuted" CanExecute="canStopPolling" />
    </UserControl.CommandBindings>
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <Button Command="{x:Static my:PluginMain.StartPolling}">Start Polling</Button>
            <Button Command="{x:Static my:PluginMain.StopPolling}">Stop Polling</Button>
        </StackPanel>
        <ScrollViewer VerticalAlignment="Top" MaxHeight="50" VerticalScrollBarVisibility="Visible">
            <StackPanel x:Name="ServerBox"/>
        </ScrollViewer>
    </StackPanel>
</UserControl>
