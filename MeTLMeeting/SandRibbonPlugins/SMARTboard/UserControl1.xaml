<UserControl x:Class="SMARTboard.PluginMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:my="clr-namespace:SMARTboard" 
    Height="100"
    Width="350"
    Loaded="Main_Loaded">
    
    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static my:PluginMain.ConnectToSmartboard}" Executed="ConnectToSmartboardExecuted" CanExecute="canConnectToSmartboard" />
        <CommandBinding Command="{x:Static my:PluginMain.DisconnectFromSmartboard}" Executed="DisconnectFromSmartboardExecuted" CanExecute="canDisconnectFromSmartboard" />
    </UserControl.CommandBindings>
    <StackPanel>
        <StackPanel Orientation="Horizontal" MaxHeight="25">
            <Button Command="{x:Static my:PluginMain.ConnectToSmartboard}">Connect</Button>
            <Button Command="{x:Static my:PluginMain.DisconnectFromSmartboard}">Disconnect</Button>
        </StackPanel>
        <ListView x:Name="SMARTboardDiagnosticOutput" MaxHeight="40" MaxWidth="400" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontSize="10"/>
    </StackPanel>
</UserControl>
