<Window x:Class="HeadlessClassroom.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="234" Height="120"
    Title="Window1">
    <StackPanel>
        <StackPanel Orientation="Horizontal" x:Name="participation">
            <Button Click="Author">One Author</Button>
            <Button Click="Authors">10 Authors</Button>
            <Button Click="Students">10 Students</Button>
        </StackPanel>
        <Button Click="takeSomeNotes">Everybody take some notes</Button>
        <Button Click="talkOutLoud">Everybody talk out loud</Button>
        <TextBlock Text="Rate" x:Name="rateDisplay"/>
    </StackPanel>
</Window>
