<Window x:Class="SmartboardController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:api="clr-namespace:SmartboardController"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static api:App.connectToSmartboard}" CanExecute="Connect_CanExecute" Executed="Connect_Executed"/>
        <CommandBinding Command="{x:Static api:App.disconnectFromSmartboard}" CanExecute="Disconnect_CanExecute" Executed="Disconnect_Executed"/>
    </Window.CommandBindings>
    <StackPanel>
        <Button Command="{x:Static api:App.connectToSmartboard}" Content="Connect"/>
        <Button Command="{x:Static api:App.disconnectFromSmartboard}" Content="Disconnect"/>
    </StackPanel>
</Window>
