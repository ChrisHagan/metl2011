<UserControl x:Class="Sandbox.SelectionTools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Canvas x:Name="rectangleCanvas" Background="Transparent"
            PreviewMouseLeftButtonDown="tools_PreviewMouseLeftButtonDown"
            PreviewMouseMove="tools_PreviewMouseMove"
            AllowDrop="True"
            Drop="tools_Drop"
            DragOver="tools_Drag"
            PreviewMouseLeftButtonUp="rectangleCanvas_PreviewMouseLeftButtonUp"
            >
            <Ellipse x:Name="move"  Fill="Red"/>
            <Ellipse x:Name="resize"  Fill="Green"/>
    </Canvas>
</UserControl>
