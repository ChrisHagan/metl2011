<sr:RibbonTab x:Class="SandRibbon.Tabs.ConversationManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sr="http://schemas.divelements.co.uk/wpf/sandribbon"
    xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"
    xmlns:core="clr-namespace:System;assembly=mscorlib"
    xmlns:dict="clr-namespace:SandRibbon.Components.ResourceDictionaries" 
    sr:KeyboardAccess.Keys="P" Text="Conversation Management" x:Name="conversationManagement">
    <sr:RibbonTab.Resources>
        <core:String x:Key="preferredDisplayIndex">8</core:String>    
    </sr:RibbonTab.Resources>
    <sr:RibbonGroup>
        <dict:Button Text="Page Reorder" ToolTip="{DynamicResource PageReorderToolTip}" Icon="/Resources/NewSlide.png" x:Name="editConversation" Command="{x:Static api:Commands.EditConversation}"/>
        <ToggleButton Content="Ban Content" ToolTip="{DynamicResource BanContentToolTip}" x:Name="banContent" Checked="OnBanContentChanged" Unchecked="OnBanContentChanged"/>
        <dict:Button x:Name="bannedContentManagement" Command="{x:Static api:Commands.ViewBannedContent}" 
                                  Text="Banned Content Management" 
                                  ToolTip="{DynamicResource BanContentToolTip}"/>
    </sr:RibbonGroup>

</sr:RibbonTab>