<UserControl
    xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:simple="clr-namespace:SandRibbon.Components.SimpleImpl"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dict="clr-namespace:SandRibbon.Components.ResourceDictionaries"
    xmlns:core="clr-namespace:System;assembly=mscorlib"
    x:Class="SandRibbon.Tabs.Groups.Live">
    <dict:RibbonPanel>
        <dict:Button x:Name="live" ToolTip="{StaticResource FriendsToolTip}" Text="Listen" Icon="\Resources\friendsplaceholder.png" Click="Participate_Click"/>
        <dict:CheckBox x:Name="send" Text="Talk" Click="send_Checked"/>
    </dict:RibbonPanel>
</UserControl>    