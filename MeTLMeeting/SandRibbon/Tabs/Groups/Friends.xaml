 <sr:RibbonGroup ShowDialogLauncher="False" 
    Header="Friends" 
    xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"
    Image="\Resources\friendsplaceholder.png"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:simple="clr-namespace:SandRibbon.Components.SimpleImpl"
    xmlns:SandRibbonInterop="clr-namespace:SandRibbonInterop;assembly=SandRibbonInterop"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sr="http://schemas.divelements.co.uk/wpf/sandribbon"
                 xmlns:dict="clr-namespace:SandRibbon.Components.ResourceDictionaries"
xmlns:core="clr-namespace:System;assembly=mscorlib"
    x:Class="SandRibbon.Tabs.Groups.Friends">
    <sr:RibbonGroup.Resources>
        <core:String x:Key="preferredDisplayIndex">3</core:String>    
    </sr:RibbonGroup.Resources>
    <sr:RibbonGroup.Variants>
        <sr:GroupVariant Variant="Small" Priority="2"/>
        <sr:GroupVariant Variant="Medium" Priority="1"/>
        <sr:GroupVariant Variant="Collapsed" Priority="3"/>
    </sr:RibbonGroup.Variants>
    <dict:RibbonPanel>
        <dict:Button x:Name="ShowFriendsButton" ToolTip="{DynamicResource FriendsToolTip}" Text="Friends" Icon="\Resources\friendsplaceholder.png" Command="{x:Static api:Commands.ToggleFriendsVisibility}" />
    </dict:RibbonPanel>
</sr:RibbonGroup>           