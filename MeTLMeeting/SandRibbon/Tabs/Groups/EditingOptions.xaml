<ribbon:RibbonGroup x:Class="SandRibbon.Tabs.Groups.EditingOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
    xmlns:groups="clr-namespace:SandRibbon.Tabs.Groups"
    xmlns:core="clr-namespace:System;assembly=mscorlib"
    Header="Editing Options" >
    <ribbon:RibbonGroup.Resources>
        <core:String x:Key="preferredDisplayIndex">1</core:String>
    </ribbon:RibbonGroup.Resources>
    <StackPanel Orientation="Horizontal" x:Name="LayoutRoot" >
        <groups:ToolBox x:Name="toolBox"/>
        <groups:PenColors x:Name="penColors"/>
        <groups:TextTools x:Name="textTools"/>
    </StackPanel >
</ribbon:RibbonGroup>           