<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:layout="clr-namespace:SandRibbon.Layout"
                    xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"   
                    xmlns:osm="http://schemas.awesomium.com/winfx"
                    xmlns:viewModel="clr-namespace:SandRibbon.Pages.Conversations.Models"                    
                   >
    <Grid x:Key="oneNoteConfiguration" x:Shared="False"
          layout:GridLayout.ItemsPerRow="1">
        <Label Content="Public API Key" />
        <TextBox Text="{Binding Path=apiKey}" />
        <Label Content="Private API Secret" />
        <TextBox Text="{Binding Path=apiSecret}" />
        <Button Content="Test Connection" Command="{x:Static api:Commands.BrowseOneNote}" 
                CommandParameter="{Binding}" />
    </Grid>
    <Grid x:Key="oneNoteListing" x:Shared="False"
          layout:GridLayout.ItemsPerRow="1">
        <Grid.Resources>
            <Thickness x:Key="inset" Left="10" />
        </Grid.Resources>
        <Label Content="OneNote Notebooks" />
        <ItemsControl ItemsSource="{Binding Path=Books}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid layout:GridLayout.ItemsPerRow="1" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid layout:GridLayout.ItemsPerRow="1">
                        <Label Grid.Column="1" Content="{Binding Path=Name}" />
                        <ItemsControl ItemsSource="{Binding Path=Sections}" Margin="{DynamicResource inset}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Grid layout:GridLayout.ItemsPerRow="1" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid layout:GridLayout.ItemsPerRow="1">
                                        <Label Style="{DynamicResource medium}" Content="{Binding Path=Name}" />
                                        <ItemsControl ItemsSource="{Binding Path=Pages}" Margin="{DynamicResource inset}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Command="{x:Static api:Commands.MoveToNotebookPage}" CommandParameter="{Binding}">
                                                        <Label Style="{DynamicResource medium}" Content="{Binding Path=Title}" />
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</ResourceDictionary>