<UserControl x:Class="SandRibbon.Components.Drawer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:SandRibbon.Components"
    xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"
    xmlns:sr="http://schemas.divelements.co.uk/wpf/sandribbon" 
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    Visibility="Collapsed" >
    <Grid>
        <Grid>
            <Grid Height="25" Width="Auto" HorizontalAlignment="Stretch"
                                       VerticalAlignment="Top"
                                       Background="{StaticResource BackgroundBlueGradient}"
                                       Margin="0,0,20,0">
                <TextBlock x:Name="notes" Text="Personal Notes" FontSize="18" Margin="0,0,25,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
            <ScrollViewer x:Name="scroll" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                <components:Notepad Margin="0,25,0,0" Width="Auto" Height="Auto" x:Name="scratchPad"/> 
            </ScrollViewer>
        </Grid>
        <components:ScrollBar x:Name="adornerScroll" />
    </Grid>
</UserControl>
