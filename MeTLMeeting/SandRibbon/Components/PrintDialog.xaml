<Window x:Class="SandRibbon.Components.PrintDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dict="clr-namespace:SandRibbon.Components.ResourceDictionaries"
    Height="300" Width="300">
    <StackPanel>
        <dict:Button x:Name="startPrinting" Text="Print this conversation" Click="startPrinting_Click"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Print my private notes as well" />
            <CheckBox IsChecked="{Binding Path=IncludePrivateContent}"/>
        </StackPanel>
    </StackPanel>
</Window>
