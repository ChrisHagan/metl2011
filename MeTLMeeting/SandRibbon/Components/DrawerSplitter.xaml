<UserControl x:Class="SandRibbon.Components.DrawerSplitter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Grid.Column="{Binding Path=column}">
    <GridSplitter Width="20" Background="{StaticResource BackgroundBlueGradient}" 
                  ResizeBehavior="PreviousAndCurrent" ResizeDirection="Columns"
                  VerticalAlignment="Stretch" Height="Auto" HorizontalAlignment="Center" />
</UserControl>
