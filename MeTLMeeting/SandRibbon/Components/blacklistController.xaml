<Window x:Class="SandRibbon.Components.blacklistController"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="blacklistController" Height="300" Width="300">
    <StackPanel>
        <ItemsControl x:Name="blacklistedUsers" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox  IsChecked="True" Content="{Binding}" Unchecked="CheckBox_Checked" Checked="CheckBox_Checked"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Click="updateBlacklist" Content="Update Blacklist"/>
    </StackPanel>
</Window>
