<UserControl x:Class="SandRibbon.Components.Submissions.ScreenshotSubmission"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dict="clr-namespace:SandRibbon.Components.ResourceDictionaries"
    xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    
    <StackPanel Orientation="Horizontal">
        <RibbonButton x:Name="submitSubmission" 
                Label="Submit a screenshot" LargeImageSource="\Resources\SendSubmission.png"
                      Command="{x:Static api:Commands.RequestScreenshotSubmission}"
                                  ToolTip="{DynamicResource SubmitSubmissionToolTip}"/>
        <RibbonButton x:Name="viewSubmission" Command="{x:Static api:Commands.ViewSubmissions}" 
                                  Label="View Submissions" LargeImageSource="\Resources\ViewSubmission.png"
                                  ToolTip="{DynamicResource ViewSubmissionToolTip}"/>
    </StackPanel>
</UserControl>
