<UserControl x:Class="SandRibbon.Components.Submissions.ScreenshotSubmission"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <StackPanel Orientation="Horizontal">
        <Button Click="generateScreenshot">
            <TextBlock>Submit a screenshot</TextBlock>
        </Button>
        <Button Click="viewSubmissions" >
            <TextBlock>View Submissions</TextBlock>
        </Button>
    </StackPanel>
</UserControl>
