<UserControl x:Class="SandRibbon.Components.SlideNavigationControls"
    xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dict="clr-namespace:SandRibbon.Components.ResourceDictionaries"
    xmlns:quizzing="clr-namespace:SandRibbon.Quizzing"    
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Components="clr-namespace:SandRibbon.Components">
    <UniformGrid x:Name="nav" Height="40" Rows="1" Columns="2">
        <Button x:Name="moveToPrevious" ToolTip="{DynamicResource PreviousSlideToolTip}" >
            <TextBlock Text="Previous" Style="{DynamicResource minorHeading}" />
        </Button>
        <Button x:Name="moveToNext" ToolTip="{DynamicResource NextSlideToolTip}" Command="{x:Static api:Commands.MoveToNext}">
            <TextBlock Text="Next" Style="{DynamicResource minorHeading}" />
        </Button>
    </UniformGrid>
</UserControl>