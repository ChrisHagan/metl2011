<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"   
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type metro:MetroWindow}">
        <Setter Property="FontFamily" Value="./Resources/#advent-pro.thin" />
    </Style>
    <Style TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style x:Key="medium" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="15" />
    </Style>
    <Style x:Key="explanation" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="{DynamicResource AccentColor}" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="macro" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="macroToggle" TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource {x:Type ToggleButton}}">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>