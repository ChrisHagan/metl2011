<UserControl x:Class="SandRibbon.Components.ZoomControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:dict="clr-namespace:SandRibbon.Components.ResourceDictionaries"
    xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <WrapPanel>
        <RibbonButton x:Name="ZoomOut" Command="{x:Static api:Commands.ZoomOut}" Label="Zoom Out" LargeImageSource="..\Resources\Ribbon-ZoomOut.png" ToolTip="{DynamicResource ZoomOutToolTip}"/>
        <RibbonButton x:Name="ZoomIn" Command="{x:Static api:Commands.ZoomIn}" Label="Zoom In" LargeImageSource="..\Resources\Ribbon-ZoomIn.png" ToolTip="{DynamicResource ZoomInToolTip}"/>
        <RibbonButton x:Name="InitiateGrabZoom" Command="{x:Static api:Commands.InitiateGrabZoom}" Label="Grab Zoom" LargeImageSource="..\Resources\GrabZoom.png" ToolTip="{DynamicResource GrabZoomToolTip}"/>
    </WrapPanel>
</UserControl>
