<UserControl x:Class="SandRibbon.Components.Sandpit.ThoughtBubbleSpace"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:System;assembly=mscorlib"
    xmlns:components="clr-namespace:SandRibbon.Components">
    <UserControl.Resources>
        <core:String x:Key="defaultPrivacy">public</core:String>
        <core:String x:Key="target">thoughtBubble</core:String>
    </UserControl.Resources>
    <StackPanel x:Name="thoughtSpace" Orientation="Vertical">
        <StackPanel Orientation="Horizontal"  Background="{StaticResource BackgroundBlueGradient}">
            <Button>Make Bubble Public</Button>
            <Button>Make Bubble Private</Button> 
        </StackPanel>
        <components:UserCanvasStack x:Name="stack"/>
    </StackPanel>
</UserControl>