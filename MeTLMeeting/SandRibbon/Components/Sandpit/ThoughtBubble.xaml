<UserControl x:Class="SandRibbon.Components.Sandpit.ThoughtBubble"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:quiz="clr-namespace:SandRibbon.Quizzing"
    xmlns:Components="clr-namespace:SandRibbon.Components"
    xmlns:Sandpit="clr-namespace:SandRibbon.Components.Sandpit" >
        <Canvas x:Name="thoughtContainer">
                <Viewbox x:Name="thoughtView" Height="80" Width="80"
                         MouseLeftButtonUp="toggleThoughtBubble"
                                                MouseEnter="thought_MouseEnter" 
                                                MouseLeave="thought_MouseLeave">
                    <Sandpit:ThoughtBubbleSpace x:Name="thought" 
                                                />
                </Viewbox>
            <Viewbox x:Name="RLWViewBox" Width="80" Height="80"/>
        </Canvas>
</UserControl>
