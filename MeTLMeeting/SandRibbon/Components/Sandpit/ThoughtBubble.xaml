<UserControl x:Class="SandRibbon.Components.Sandpit.ThoughtBubble"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:quiz="clr-namespace:SandRibbon.Quizzing"
    xmlns:Components="clr-namespace:SandRibbon.Components"
    xmlns:Sandpit="clr-namespace:SandRibbon.Components.Sandpit" >
    <Canvas x:Name="thoughtContainer" Background="Black">
        <Border BorderBrush="Black" BorderThickness="1" Background="Black">
            <Viewbox x:Name="thoughtView" Height="40" Width="40">
                <Sandpit:ThoughtBubbleSpace x:Name="thought" MouseLeftButtonUp="ThoughtBubbleSpace_MouseDown"/>
            </Viewbox>
        </Border>
        <Viewbox x:Name="RLWViewBox" Width="40" Height="40"/>
    </Canvas>
</UserControl>
