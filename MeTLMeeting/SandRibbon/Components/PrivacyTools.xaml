<UserControl x:Class="SandRibbon.Components.PrivacyTools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"
                xmlns:dict="clr-namespace:SandRibbon.Components.ResourceDictionaries"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    VerticalAlignment="Top"
    HorizontalAlignment="Right"
    AutomationProperties.AutomationId="privacyTools"
    >
    <dict:RibbonPanel>
        <dict:Button x:Name="hiddenButton" Visibility="Collapsed" Command="api:Commands.DummyCommandToProcessCanExecuteForPrivacyTools" Tag="This button should always be collapsed.  It is only being used to redirect a canExecute Handler."/>
        <RadioButton GroupName="privacyButtons" x:Name="publicMode" IsEnabled="{Binding ElementName=hiddenButton, Path=IsEnabled}" ToolTip="{DynamicResource WorkPubliclyToolTip}" Tag="public" Content="Public" Checked="privacyChange"></RadioButton>
        <RadioButton GroupName="privacyButtons" x:Name="privateMode" IsEnabled="{Binding ElementName=hiddenButton, Path=IsEnabled}" ToolTip="{DynamicResource WorkPrivatelyToolTip}" Tag="private" Content="Private" Checked="privacyChange"></RadioButton>
        </dict:RibbonPanel>
</UserControl>
