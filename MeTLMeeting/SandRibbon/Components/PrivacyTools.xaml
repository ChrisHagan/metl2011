<UserControl x:Class="SandRibbon.Components.PrivacyTools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"
                xmlns:dict="clr-namespace:SandRibbon.Components.ResourceDictionaries"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    VerticalAlignment="Top"
    HorizontalAlignment="Right"
    AutomationProperties.AutomationId="privacyTools"
    >
    <dict:RibbonPanel>
        <RibbonRadioButton VerticalAlignment="Stretch" GroupName="privacyButtons" x:Name="publicMode" ToolTip="{DynamicResource WorkPubliclyToolTip}" Command="{x:Static api:Commands.SetPrivacy}" CommandParameter="public" Label="Work publicly" LargeImageSource="\Resources\Collaborate.png"></RibbonRadioButton>
        <RibbonRadioButton VerticalAlignment="Stretch" GroupName="privacyButtons" x:Name="privateMode" ToolTip="{DynamicResource WorkPrivatelyToolTip}" Command="{x:Static api:Commands.SetPrivacy}" CommandParameter="private" Label="Work privately" LargeImageSource="\Resources\NoCollaborate.png"></RibbonRadioButton>
    </dict:RibbonPanel>
</UserControl>
