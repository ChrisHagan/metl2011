<UserControl x:Class="SandRibbon.Quizzing.QuizButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:sr="clr-namespace:SandRibbon"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Ellipse Stroke="Gray" Fill="{Binding Path=color, Converter={x:Static sr:Converters.ColorToBrushConverter}}" Height="40" Width="40" />
        <Label Content="{Binding Path=name}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
    </Grid>
</UserControl>
