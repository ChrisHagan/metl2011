<UserControl x:Class="SandRibbon.Quizzing.GoldPlaque"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Rectangle Fill="Gold" RadiusX="3" RadiusY="3" Width="Auto" HorizontalAlignment="Stretch" Stroke="Gray"/>
        <Rectangle Margin="0,0,0,0" HorizontalAlignment="Right" Width="60" Fill="{StaticResource ShinyAbsoluteHighlightBrush}" RadiusX="3" RadiusY="3" />
    </Grid>
</UserControl>
