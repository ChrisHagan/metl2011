<UserControl x:Class="SandRibbon.Quizzing.AuthorAQuizInstructions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:quiz="clr-namespace:SandRibbon.Quizzing"
    HorizontalAlignment="Center"
    VerticalAlignment="Top"
    IsHitTestVisible="False"
    Opacity="0.8">
    <Border BorderBrush="Black" CornerRadius="5" BorderThickness="2" Background="{DynamicResource BackgroundBlueGradient}" Padding="20">
        <TextBlock Foreground="Black" Text="You are creating a quiz.  Add content to this space until you are happy with it, and then click the Publish button on the bottom right" />    
    </Border>
</UserControl>
