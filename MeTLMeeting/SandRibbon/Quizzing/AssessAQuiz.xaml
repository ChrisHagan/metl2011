<Window x:Class="SandRibbon.Quizzing.AssessAQuiz"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sr="clr-namespace:SandRibbon"
    xmlns:quiz="clr-namespace:SandRibbon.Quizzing"
    Title="Assess a Quiz" >
    <Border Background="{StaticResource BackgroundBlueGradient}" x:Name="allResults">
        <StackPanel Orientation="Vertical">
            <Label Content="{Binding Path=title, Converter={x:Static quiz:AnswerAQuiz.TitleConverter}}" />
            <Label Content="{Binding Path=question, Converter={x:Static quiz:AnswerAQuiz.QuestionConverter}}" />
            <ItemsControl x:Name="resultDisplay">
                <DataTemplate>
                    <Grid>
                        <Rectangle Fill="{Binding Path=color, Converter={x:Static sr:Converters.ColorToBrushConverter}}">
                            <Rectangle.Width>
                                <MultiBinding Converter="{x:Static sr:Converters.multiply}">
                                    <Binding ElementName="allResults" Path="ActualWidth" />
                                    <Binding Path="percentage" />
                                </MultiBinding>
                            </Rectangle.Width>
                        </Rectangle>
                        <Label Content="{Binding label}" /> 
                    </Grid>
                </DataTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</Window>
