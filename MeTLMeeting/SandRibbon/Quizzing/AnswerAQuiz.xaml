<UserControl x:Class="SandRibbon.Quizzing.AnswerAQuiz"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:quiz="clr-namespace:SandRibbon.Quizzing"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:SandRibbon.Components"
    xmlns:core="clr-namespace:System;assembly=mscorlib"
    x:Name="layoutRoot">
    <UserControl.Resources>
        <core:String x:Key="defaultPrivacy">public</core:String>
        <core:String x:Key="target">quizAnswering</core:String>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" x:Name="printingDummy">
        <Canvas>
            <StackPanel
                x:Name="container"
                Width="{Binding ElementName=layoutRoot, Path=ActualWidth}"
                Height="{Binding ElementName=layoutRoot, Path=ActualHeight}"
                Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Border BorderThickness="1" BorderBrush="Black">
                        <InkCanvas x:Name="quizQuestion" Width="auto" EditingMode="None"></InkCanvas>
                    </Border>
                    <Border BorderThickness="1" BorderBrush="Black">
                        <quiz:BarGraph x:Name="barGraph"/>
                    </Border>
                </StackPanel>
                <components:UserCanvasStack  x:Name="canvasStack" IsHitTestVisible="False"/>
            </StackPanel>
        </Canvas>
    </ScrollViewer>
</UserControl>
