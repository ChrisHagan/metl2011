<Window x:Class="SandRibbon.Quizzing.AnswerAQuiz"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:quiz="clr-namespace:SandRibbon.Quizzing"
    xmlns:sr="clr-namespace:SandRibbon"
    WindowStyle="ToolWindow"
    Topmost="True"
    x:Name="answerAQuiz"
    Title="Answer Quiz">
    <Border Background="{StaticResource BackgroundBlueGradient}">
        <StackPanel Orientation="Vertical">
            <Grid Margin="10 10 10 30">
                <Rectangle Fill="White" RadiusX="3" RadiusY="3" Width="Auto" HorizontalAlignment="Stretch" Stroke="Gray" />
                <StackPanel>
                    <Grid>
                        <quiz:GoldPlaque/>
                        <TextBlock Margin="4" MaxWidth="300"
                                TextWrapping="WrapWithOverflow" FontWeight="Bold" FontSize="14" FontFamily="Verdana" Text="{Binding Path=title}"
                                       HorizontalAlignment="Center" />
                    </Grid>
                    <TextBlock FontWeight="Bold" TextWrapping="WrapWithOverflow" Text="{Binding Path=question}" HorizontalAlignment="Center" />
                </StackPanel>
            </Grid>
            <ListBox x:Name="quizOptions" SelectionChanged="ListBox_SelectionChanged" ItemsSource="{Binding Path=options}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" x:Name="quizAnswers">
                            <quiz:QuizButton />
                            <Label Content="{Binding Path=optionText}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate> 
            </ListBox>
        </StackPanel> 
    </Border>
</Window>
