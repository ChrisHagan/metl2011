<Page x:Class="SandRibbon.Pages.Integration.OneNoteSynchronizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"       
      xmlns:local="clr-namespace:SandRibbon.Pages.Integration"     
      xmlns:layout="clr-namespace:SandRibbon.Layout"
      xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"   
      Title="OneNoteSynchronization">
    <Grid layout:GridLayout.ItemsPerRow="1">
        <Label Content="Saving conversations to OneNote" Margin="{StaticResource clearBottom}"/>
        <DataGrid ItemsSource="{Binding Path=conversations}" Margin="{DynamicResource clearTop}" CanUserDeleteRows="True" CanUserAddRows="False"
                  CanUserReorderColumns="False" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Conversation" Binding="{Binding Path=Conversation.Title}" />
                <DataGridTemplateColumn Header="Progress">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar IsIndeterminate="True" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
