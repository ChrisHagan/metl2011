<Page x:Class="SandRibbon.Pages.ServerSelection.ServerSelectorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
      xmlns:local="clr-namespace:SandRibbon.Pages.ServerSelection"      
      Title="ServerSelectorPage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="serversContainer">
        <TextBlock Style="{StaticResource Header}">Please select a server against which to work.</TextBlock>
        <ListBox x:Name="servers" BorderThickness="0" Margin="50">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="100">
                        <Image Width="100" Height="100" Source="{Binding Path=Value.image}" />
                        <TextBlock Text="{Binding Path=Key}" Style="{StaticResource Label}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>
        <Button x:Name="connect" Click="SetBackend" HorizontalContentAlignment="Center">
            <TextBlock Text="Connect" Padding="30" FontSize="30" />
        </Button>
    </StackPanel>
</Page>
