<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:api="clr-namespace:SandRibbon;assembly=SandRibbonInterop"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <sys:Double x:Key="ButtonWidth">30</sys:Double>
    <sys:Double x:Key="ButtonHeight">30</sys:Double>
    <sys:Double x:Key="SlotSpacing">10</sys:Double>
    <Thickness x:Key="SlotMargin" Right="{StaticResource SlotSpacing}" Left="{StaticResource SlotSpacing}" />
    <Border x:Key="slot" Width="{DynamicResource ButtonWidth}" Height="{DynamicResource ButtonHeight}" 
            x:Shared="False" BorderBrush="DarkGray" BorderThickness="1" />
    <Button x:Key="pen_red" Command="{x:Static api:Commands.SetDrawingAttributes}" x:Shared="False">
        <Button.CommandParameter>
            <DrawingAttributes Color="Red" IsHighlighter="False"/>
        </Button.CommandParameter>
        <Rectangle Width="30" Height="30" Fill="Red" />
    </Button>
</ResourceDictionary>