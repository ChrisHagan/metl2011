<Window x:Class="SlidePostMortem.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sr="clr-namespace:SandRibbon.Components;assembly=MeTL"
    xmlns:core="clr-namespace:System;assembly=mscorlib"
    xmlns:postMortem="clr-namespace:SlidePostMortem"
    Loaded="Window_Loaded"
    WindowState="Maximized"
    Background="Red"
    Title="MeTL Post Mortem">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static postMortem:Window1.Advance}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed"/>
    </Window.CommandBindings>
    <Window.Resources>
        <core:String x:Key="defaultPrivacy">public</core:String>
        <core:String x:Key="target">presentationSpace</core:String>
    </Window.Resources>
    <Grid>
        <TextBlock x:Name="currentAuthors" />
        <Viewbox x:Name="box">
            <StackPanel>
                <Grid>
                    <sr:UserCanvasStack x:Name="stack" Background="White"/>
                    <Canvas>
                        <Rectangle x:Name="bounds" Opacity="0.4" Fill="Yellow" />
                    </Canvas>
                </Grid>
                <Button Command="{x:Static postMortem:Window1.Advance}">Advance</Button>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
