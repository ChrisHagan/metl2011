<Window x:Class="testbed.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Width="640">
    <StackPanel Margin="20" Width="600">
        <StackPanel Orientation="Horizontal">
        <TextBox x:Name="username" Width="270"/>
        <TextBox x:Name="input" Width="270"/>
        <Button Content="Encrypt and Send" x:Name="encryptAndSendButton" Click="submit_Click" Width="60"/>
        </StackPanel>
        <TextBlock x:Name="output" Width="600" TextWrapping="Wrap"/>
        <TextBlock x:Name="response" Width="600" TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="encryptedPassword" Width="550"/>
            <Button Content="Decrypt" Width="50" x:Name="decryptButton" Click="decryptButton_Click"/>
        </StackPanel>
        <TextBlock x:Name="decryptResponse" Width="600" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
